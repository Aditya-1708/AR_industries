generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  SUPER_ADMIN
  EDITOR
  VIEWER
}

model Admin {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      AdminRole @default(EDITOR)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  type        String?
  img         String?
}

model Process {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  img         String?
}

model JobOpening {
  id           Int              @id @default(autoincrement())
  title        String
  description  String?
  isActive     Boolean          @default(true)
  postedAt     DateTime         @default(now())
  applications JobApplication[]
}

model JobApplication {
  id        Int        @id @default(autoincrement())
  fullName  String
  email     String
  phoneNo   String
  wswhy     String?
  resumeLoc String
  appliedAt DateTime   @default(now())
  jobId     Int
  job       JobOpening @relation(fields: [jobId], references: [id], onDelete: Cascade)
}
