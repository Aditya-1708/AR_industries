generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  firstName      String
  isAdmin        Boolean          @default(false)
  email          String           @unique
  phoneNumber    Int?             @unique
  lastName       String
  password       String
  JobApplication JobApplication[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float?
  material    String?
  application String?
  keyFeatures String[]
  stock       Int      @default(0)
  img         String?
}

model Process {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
}

model JobOpening {
  id             Int              @id @default(autoincrement())
  title          String
  description    String?
  openings       Int              @default(1)
  salary         Float?
  isActive       Boolean          @default(true)
  postedAt       DateTime         @default(now())
  JobApplication JobApplication[]
}

model JobApplication {
  id        Int        @id @default(autoincrement())
  jobId     Int
  userId    Int
  resumeLoc String
  job       JobOpening @relation(fields: [jobId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  appliedAt DateTime   @default(now())
}
